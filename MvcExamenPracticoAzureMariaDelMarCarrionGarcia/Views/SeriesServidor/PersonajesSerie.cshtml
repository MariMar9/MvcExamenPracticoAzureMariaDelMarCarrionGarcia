@model IEnumerable<MvcExamenPracticoAzureMariaDelMarCarrionGarcia.Models.Personaje>

@{
    ViewData["Title"] = "PersonajesSerie";
}

<h1>PersonajesSerie</h1>

<hr />

<form method="post">
    <div class="form-group">
        <label>ID serie:</label>
        <input type="number" name="idSerie" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Mostrar personajes</button>
</form>

@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdPersonaje)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Imagen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdSerie)
                </th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model)
    {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdPersonaje)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    <img src="@item.Imagen" style="width:300px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdSerie)
                </td>
            </tr>
    }
        </tbody>
    </table>
}